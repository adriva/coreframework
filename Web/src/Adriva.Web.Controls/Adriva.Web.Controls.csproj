<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
    <Title>Adriva Web Controls Library</Title>
    <PackageDescription>Includes common (shared) asp net core web controls.</PackageDescription>    
    <Version>3.0.0-rc04</Version>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Assets/*.js">
      <LogicalName>Adriva.Web.Controls.%(filename)%(extension)</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets/*.css">
      <LogicalName>Adriva.Web.Controls.%(filename)%(extension)</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets/*.eot">
      <LogicalName>Adriva.Web.Controls.%(filename)%(extension)</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets/*.woff">
      <LogicalName>Adriva.Web.Controls.%(filename)%(extension)</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets/*.woff2">
      <LogicalName>Adriva.Web.Controls.%(filename)%(extension)</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets/*.ttf">
      <LogicalName>Adriva.Web.Controls.%(filename)%(extension)</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets/*.svg">
      <LogicalName>Adriva.Web.Controls.%(filename)%(extension)</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets/lang.*">
      <LogicalName>Adriva.Web.Controls.%(filename)%(extension)</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Adriva.Web.Controls.Abstractions\Adriva.Web.Controls.Abstractions.csproj" />
  </ItemGroup>
</Project>
