@using Adriva.Web.Controls.Abstractions
@{
    ViewData["Title"] = "Home Page";
}
<renderer defer name="bootstrap-grid" property1="test1" property2="test2" optimization-context-name="WebControls">
    <div></div>
    <div>
    <grid id="dd" source="https://jsonplaceholder.typicode.com/posts" height="600">
        <grid-column title="Id" field="id" ishidden="false">
            <column-formatter>
                (v,r)=>'<b>' + v + '</b>'
            </column-formatter>
        </grid-column>
        <grid-column title="Name" field="title" width=450></grid-column>
        <grid-column title="Content" field="body" alignment="Right"></grid-column>
    </grid>
    </div>
</renderer>