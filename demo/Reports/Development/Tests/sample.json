{
    "$schema": "../../../../Reporting/src/Adriva.Extensions.Reporting.Abstractions/report-schema.json",
    "base": "basereport",
    "name": "promotions sample report",
    "contextProvider": "demo.Controllers.ReportContextProvider,demo",
    "commands": {
        "getTypeCodes": {
            "commandText": "System.TypeCode"
        },
        "getUsers": {
            "commandText": "SELECT * FROM org.[User] WHERE FirstName LIKE @firstName + '%' ORDER BY Id"
        },
        "getCities": {
            "commandText": "SELECT Id, Name FROM City ORDER BY Name"
        },
        "getDistricts": {
            "commandText": "SELECT Id, Name FROM District WHERE CityId = @city ORDER BY Name"
        },
        "getAttributeTargets": {
            "commandText": "Enum"
        },
        "getSomeData": {
            "commandText": "GetSampleData @firstName, @city"
        }
    },
    "filters": {
        "city": {
            "displayName": "Sehir",
            "dataType": "Int64",
            "dataSource": "DefaultSqlServer",
            "defaultValue": "Get35",
            "command": "getCities",
            "properties": "Context",
            "children": {
                "district": {
                    "displayName": "Ilce",
                    "dataSource": "DefaultSqlServer",
                    "command": "getDistricts",
                    "fields": {
                        "Id": {},
                        "Name": {}
                    }
                }
            }
        },
        "dummy": {
            "displayName": "Attribute Targets",
            "dataSource": "AttTargetsEnum",
            "command": "getAttributeTargets",
            "fields": {
                "value": {
                    "properties": "ValueField"
                },
                "text": {
                    "properties": "ValueField"
                }
            }
        },
        "firstName": {
            "displayName": "Ad",
            "dataType": "String",
            "defaultValue": "",
            "children": {
                "status": {
                    "displayName": "Durum",
                    "dataType": "Decimal"
                }
            }
        }
    },
    "output": {
        "command": "getSomeData",
        "dataSource": "sampleObject"
    }
}