{
    "$schema": "https://raw.githubusercontent.com/adriva/coreframework/master/Reporting/src/Adriva.Extensions.Reporting.Abstractions/report-schema.json",
    "base": "root",
    "name": "DBS Query",
    "contextProvider": null,
    "commands": {
        "QueryOutput": {
            "commandText": "EXEC [dbo].[rpt_DBSQuery] @referenceHeaderId, @accountNumber, @billingAccountNumber, @startDate, @endDate, @pageNumber, @pageSize"
        }
    },
    "filters": {
        "referenceHeaderId": {
            "dataType": "Int64",
            "defaultValue": 0
        },
        "accountNumber": {
            "dataType": "String",
            "defaultValue": null
        },
        "billingAccountNumber": {
            "dataType": "String",
            "defaultValue": null
        },
        "startDate": {
            "dataType": "DateTime",
            "defaultValue": "2022-01-01",
            "defaultValueFormatter": "PetrolOfisi.Order.Web.Common.Reporting.DefaultFormatters:AddDays, PetrolOfisi.Order.Web.Common",
            "properties": "Required"
        },
        "endDate": {
            "dataType": "DateTime",
            "defaultValue": "2022-05-20",
            "defaultValueFormatter": "PetrolOfisi.Order.Web.Common.Reporting.DefaultFormatters:AddDays, PetrolOfisi.Order.Web.Common",
            "properties": "Required"
        }
    },
    "output": {
        "command": "QueryOutput",
        "dataSource": "DefaultSqlServer",
        "fields": {
            "DealerCode": {
                "displayName": "Bayi Kodu"
            },
            "DealerName": {
                "displayName": "Bayi AdÄ±"
            },
            "QueriedBankCount": {
                "options": {
                    "class": "text-right"
                }
            },
            "TotalQuery": {
                "options": {
                    "class": "text-right"
                }
            }
        },
        "options": {
            "xlsxRenderer": {
                "templatePath": "tests/dbs.xlsx",
                "targetTableName": "Table1"
            }
        }
    }
}