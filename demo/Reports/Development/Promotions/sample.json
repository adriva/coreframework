{
    "$schema": "../../report-schema.json",
    "base": "basereport",
    "name": "promotions sample report",
    "contextProvider": "demo.Controllers.ReportContextProvider,demo",
    "commands": {
        "getTypeCodes": {
            "commandText": "System.TypeCode"
        },
        "getUsers": {
            "commandText": "SELECT * FROM org.[User] WHERE FirstName LIKE @firstName + '%' ORDER BY Id"
        },
        "getCities": {
            "commandText": "SELECT Id, Name FROM City ORDER BY Name"
        },
        "getDistricts": {
            "commandText": "SELECT Id, Name FROM District WHERE CityId = @city ORDER BY Name"
        },
        "getAttributeTargets": {
            "commandText": "Enum"
        }
    },
    "filters": {
        "city": {
            "displayName": "Sehir",
            "dataType": "Int64",
            "dataSource": "DefaultSqlServer",
            "defaultValue": 34,
            "command": "getCities",
            "fields": {
                "Id": {
                    "Name": "Id"
                },
                "Name": {
                    "Name": "Name"
                }
            },
            "children": {
                "district": {
                    "displayName": "Ilce",
                    "dataSource": "DefaultSqlServer",
                    "command": "getDistricts",
                    "fields": {
                        "Id": {
                            "Name": "Id"
                        },
                        "Name": {
                            "Name": "Name"
                        }
                    }
                }
            }
        },
        "dummy": {
            "displayName": "Attribute Targets",
            "dataSource": "AttTargetsEnum",
            "command": "getAttributeTargets"
        },
        "firstName": {
            "displayName": "Ad",
            "dataType": "String",
            "defaultValue": "",
            "children": {
                "status": {
                    "displayName": "Durum",
                    "dataType": "Decimal"
                }
            }
        }
    },
    "output": {
        "command": "getUsers",
        "dataSource": "DefaultSqlServer",
        "fields": {
            "Id": {
                "displayName": "Aydi",
                "options": {
                    "web": {
                        "formatter": "xx1",
                        "format": "C2"
                    }
                }
            },
            "firstName": {
                "displayName": "Name"
            },
            "lastName": {}
        }
    }
}